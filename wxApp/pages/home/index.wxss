.home-swiper {
    height: 13rem;
    width: 100%;
}

.slide-image {
    width: 100%;
    height: 100%;
}

.login-btn {
    width: 45%;
    height: 35px;
    font-size: 15px;
    color: #0099FF !important;
    border-color: #66CCFF !important;
    border-radius: 25px;
    line-height: 35px;
}

.home-content-warp {
    padding-top: 0.5rem;
}

.home-content-warp text {
    font-size: 17px;
    color: black;
    padding-left: 1rem;
}

.home-content {
    padding: 0 0.85rem 0.5rem 0.85rem;
}

.home-content-item {
    margin: 0.5rem 0;
    background-color: white;
    box-shadow: 0 10px 30px 0 rgba(0, 0, 0, 0.10);
    border-radius: 5px;
}

.home-content-item-image {
    padding: 1px;
}

.home-content-item-image image {
    height: 13rem;
    width: 100%;
    border-radius: 5px 5px 0px 0;
}

.home-content-item-info {
    padding: 0 0.5rem;
}

.home-content-item-name {
    font-size: 16px;
    padding: 0.25rem 0 0.25rem 0;
}

.home-content-item-base {
    display: flex;
    padding: 0.25rem 0 0.5rem 0;
    color: #999999;
}

.home-content-item-time {
    font-size: 15px;
    flex: 3;
}

.home-content-item-price {
    font-size: 15px;
    flex: 2;
    text-align: right;
}

.home-content-item-price text {
    padding: 0;
    color: #FF6666;
}