.mycard-head {
    height: 11.5rem;
    width: 100%;
}

.mycard-background {
    height: 100%;
    width: 100%;
}

.mycard-info {
    position: relative;
    background: white;
    margin: 0 1rem;
    border-radius: 10px;
    top: -1.5rem;
    padding-top: 2rem;
    box-shadow: 0 10px 30px 0 rgba(0, 0, 0, 0.10);
}

.user-head {
    height: 80px;
    width: 80px;
    border-radius: 80px;
    position: absolute;
    left: 50%;
    top: -40px;
    margin-left: -40px;
}

.user-phone {
    margin: 0 10px;
    border-bottom: 1px solid;
    border-bottom-color: darkgray;
    font-size: 15px;
    color: black;
    height: 2rem;
    line-height: 2rem;
    text-align: center;
}

.user-qr {
    margin: 0 10px;
    border-bottom: 1px solid;
    border-bottom-color: darkgray;
    padding: 10px 0;
}

.user-qr canvas {
    height: 150px;
    width: 150px;
    left: 50%;
    margin-left: -75px;
    position: relative;
}

.user-qr image {
    height: 150px;
    width: 150px;
    left: 50%;
    margin-left: -75px;
    position: relative;
}

.user-card-desc {
    font-size: 15px;
    margin: 0 1rem;
    text-align: center;
    padding: 10px 0;
}